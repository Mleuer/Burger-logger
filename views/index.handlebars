<h2>Burgers to be Devoured</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    <h2>{{burger_name}}</h2>
    <button class="devBtn" type="submit" data-id={{this.id}} data-devour={{this.devoured}}>Devour It</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>
<br>
<h2>Burgers that have been Devoured</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    <h2>{{burger_name}}</h2>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>