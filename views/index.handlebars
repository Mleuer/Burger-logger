<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
  </div>
</div>
<div class=container>
  <div class=row>
    <div class="col">
      <h2>Burgers to be Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <h2>{{burger_name}}</h2>
          <button class="devBtn btn btn-danger" type="submit" data-id={{this.id}} data-devour={{this.devoured}}>Devour It</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers that have been Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <h2>{{burger_name}}</h2>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='row'>

    <form class="create-form">
      <h2>Add a Burger</h2>
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="bur" name="name">
      </div>

      <div class="form-group">
        <label for="dev">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
      </div>

      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>

  </div>
</div>